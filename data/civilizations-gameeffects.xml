<?xml version="1.0" encoding="utf-8"?>
<GameEffects xmlns="GameEffects">
	<!-- Attributes -->
	<!-- 
	
	Arinnitta's Embrace:
	 All Resources have +1 Gold on the map,
	  and yield +1 Food if improved by a Rural District.
	   Urban Districts gain +1 extra Adjacency from Resources.
	-->

	<Modifier id="MOD_TRAIT_HITTITE_ABILITY_RESOURCE_GOLD" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_CITY_GRANT_WAREHOUSE_YIELD">
		<Argument name="WarehouseYieldChange">HittiteResourceGold</Argument>
		<Argument name="Tooltip">LOC_TRAIT_HITTITE_ABILITY_NAME</Argument>
	</Modifier>
	<Modifier id="MOD_TRAIT_HITTITE_ABILITY_RESOURCE_WILDCARD" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_CITY_ACTIVATE_CONSTRUCTIBLE_ADJACENCY">
		<Argument name="ConstructibleAdjacency">HittiteResourceWildcardFood, HittiteResourceWildcardGold</Argument>
		<Argument name="Tooltip">LOC_TRAIT_HITTITE_ABILITY_NAME</Argument>
	</Modifier>

	<!-- Civ Standard -->
	<Modifier id="MOD_REVEAL_CIV_CULTURE_TREE_HITTITE" collection="COLLECTION_OWNER" effect="EFFECT_PLAYER_REVEAL_CULTURE_TREE">
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_PLAYER_HAS_CIVILIZATION_OR_LEADER_TRAIT">
				<Argument name="TraitType">TRAIT_HITTITE</Argument>
			</Requirement>
		</SubjectRequirements>
		<Argument name="ProgressionTreeType">TREE_CIVICS_AQ_HITTITE</Argument>
		<String context="Description">LOC_MOD_CODE_OF_LAWS_REVEAL_CIV_CULTURE_TREE_HITTITE_DESCRIPTION</String>
	</Modifier>
	
	<Modifier id="MOD_CIV_WONDER_PRODUCTION_HITTITE" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_CITY_ADJUST_FAVORED_WONDER_PRODUCTION">
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_PLAYER_HAS_CIVILIZATION_OR_LEADER_TRAIT">
				<Argument name="TraitType">TRAIT_HITTITE</Argument>
			</Requirement>
		</SubjectRequirements>
		<Argument name="Percent">30</Argument>
		<String context="Preview">LOC_MOD_CIV_WONDER_PRODUCTION_HITTITE_DESCRIPTION</String>
	</Modifier>
</GameEffects>